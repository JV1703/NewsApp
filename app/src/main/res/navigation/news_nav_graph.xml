<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_nav_graph"
    app:startDestination="@id/breakingNewsFragment">

    <fragment
        android:id="@+id/breakingNewsFragment"
        android:name="com.example.news.presentation.ui.fragments.breaking.BreakingNewsFragment"
        android:label="fragment_breaking_news"
        tools:layout="@layout/fragment_breaking_news">
        <action
            android:id="@+id/action_breakingNewsFragment_to_articleActivity"
            app:destination="@id/articleActivity" />
    </fragment>
    <fragment
        android:id="@+id/savedNewsFragment"
        android:name="com.example.news.presentation.ui.fragments.saved_news.SavedNewsFragment"
        android:label="fragment_saved_news"
        tools:layout="@layout/fragment_saved_news">
        <action
            android:id="@+id/action_savedNewsFragment_to_articleActivity"
            app:destination="@id/articleActivity" />
    </fragment>
    <fragment
        android:id="@+id/searchNewsFragment"
        android:name="com.example.news.presentation.ui.fragments.search_news.SearchNewsFragment"
        android:label="fragment_search_news"
        tools:layout="@layout/fragment_search_news">
        <action
            android:id="@+id/action_searchNewsFragment_to_articleActivity"
            app:destination="@id/articleActivity" />
    </fragment>
    <activity
        android:id="@+id/articleActivity"
        android:name="com.example.news.presentation.ui.activity.ArticleActivity"
        android:label="activity_article"
        tools:layout="@layout/activity_article" >
        <argument
            android:name="article"
            app:argType="com.example.news.data.model.Article" />
    </activity>
</navigation>